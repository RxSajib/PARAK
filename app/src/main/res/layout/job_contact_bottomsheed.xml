<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/_10sdp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/CrossButtonID"
        android:layout_width="@dimen/_20sdp"
        android:src="@drawable/cross_icon"
        android:layout_alignParentRight="true"
        android:layout_height="@dimen/_20sdp">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:textSize="@dimen/_13sdp"
            android:text="Contact with me"
            android:fontFamily="@font/ubuntureguiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </com.google.android.material.textview.MaterialTextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/phone_contact_design"
            android:layout_height="@dimen/_40sdp">


            <com.google.android.material.textview.MaterialTextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/PhoneNumberText"
                android:textColor="@color/carbon_black"
                android:layout_width="wrap_content"
                android:text="+8801771330378"
                android:layout_height="wrap_content">

            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_9sdp"
                android:id="@+id/CallText"
                android:padding="@dimen/_4ssp"
                android:textColor="@color/carbon_white"
                android:background="@drawable/call_background"
                android:layout_width="wrap_content"
                android:text="Call Now"
                android:layout_height="wrap_content">

            </com.google.android.material.textview.MaterialTextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:background="@drawable/phone_contact_design"
            android:layout_height="@dimen/_40sdp">


            <com.google.android.material.textview.MaterialTextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/EmailAddressText"
                android:textColor="@color/carbon_black"
                android:layout_width="wrap_content"
                android:text="sajibroy206@gmail.com"
                android:layout_height="wrap_content">

            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_9sdp"
                android:padding="@dimen/_4ssp"
                android:id="@+id/EmailButtonID"
                android:textColor="@color/carbon_white"
                android:background="@drawable/mail_background"
                android:layout_width="wrap_content"
                android:text="Send Mail"
                android:layout_height="wrap_content">

            </com.google.android.material.textview.MaterialTextView>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>