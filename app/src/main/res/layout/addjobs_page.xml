<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".AddJobs.AddjobsPage">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/JobsToolbarID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/back_icon"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/back_white"></ImageView>

                </RelativeLayout>


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:fontFamily="@font/ubuntureguiar"
                    android:text="Add Jobs"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14sdp">

                </com.google.android.material.textview.MaterialTextView>

            </LinearLayout>

        </RelativeLayout>

    </com.google.android.material.appbar.MaterialToolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/JobsToolbarID">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/JobsButtonID">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_7sdp"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntureguiar"
                            android:text="Jobs Title"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_8sdp">

                        </com.google.android.material.textview.MaterialTextView>


                        <EditText
                            android:id="@+id/JobtitleID"
                            android:padding="@dimen/_10sdp"
                            android:background = "@drawable/jobs_input_background"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:hint="e.g Accountant"
                            android:fontFamily="@font/ubuntureguiar"
                            android:inputType="text"
                            android:singleLine="true"
                            android:textSize="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </EditText>

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntureguiar"
                            android:text="Company name"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_8sdp">

                        </com.google.android.material.textview.MaterialTextView>


                        <EditText
                            android:id="@+id/CompanynameID"
                            android:padding="@dimen/_10sdp"
                            android:background = "@drawable/jobs_input_background"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:hint="Type Company name"
                            android:inputType="text"
                            android:fontFamily="@font/ubuntureguiar"
                            android:singleLine="true"
                            android:textSize="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </EditText>

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntureguiar"
                            android:text="Salary"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_8sdp">

                        </com.google.android.material.textview.MaterialTextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/SalaryMinimumID"
                                android:padding="@dimen/_10sdp"
                                android:background = "@drawable/jobs_input_background"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:hint="Minimum sal."
                                android:inputType="number"
                                android:layout_weight="1"
                                android:fontFamily="@font/ubuntureguiar"
                                android:singleLine="true"
                                android:textSize="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                            </EditText>

                            <EditText
                                android:id="@+id/SalaryOFmaximum"
                                android:padding="@dimen/_10sdp"
                                android:background = "@drawable/jobs_input_background"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:hint="Maximum sal."
                                android:inputType="number"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/ubuntureguiar"
                                android:singleLine="true"
                                android:textSize="@dimen/_10sdp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                            </EditText>

                        </LinearLayout>

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntureguiar"
                            android:text="Staff Req."
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_8sdp">

                        </com.google.android.material.textview.MaterialTextView>

                        <RelativeLayout
                            android:id="@+id/WorkingTime"
                            android:padding="@dimen/_10sdp"
                            android:background = "@drawable/jobs_input_background"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_centerVertical="true"
                                android:id="@+id/AddJobsTime"
                                android:textSize="@dimen/_8sdp"
                                android:text="1-5"
                                android:fontFamily="@font/ubuntureguiar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </com.google.android.material.textview.MaterialTextView>

                            <ImageView
                                android:src="@drawable/down_arraw"
                                android:layout_centerVertical="true"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_alignParentRight="true"
                                android:layout_height="@dimen/_15sdp">

                            </ImageView>

                        </RelativeLayout>

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntureguiar"
                            android:text="Requirements "
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_8sdp">

                        </com.google.android.material.textview.MaterialTextView>


                        <EditText
                            android:id="@+id/JobDescptrionID"
                            android:layout_width="match_parent"
                            android:layout_height="68dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/jobs_input_background"
                            android:fontFamily="@font/ubuntureguiar"
                            android:gravity="start"
                            android:hint="Jobs Description"
                            android:inputType="text"
                            android:padding="@dimen/_10sdp"
                            android:textSize="@dimen/_10sdp">

                        </EditText>

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntureguiar"
                            android:text="Contact"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_10sdp">

                        </com.google.android.material.textview.MaterialTextView>

                        <EditText
                            android:id="@+id/ContactNumberID"
                            android:padding="@dimen/_10sdp"
                            android:background = "@drawable/jobs_input_background"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:hint="Contact No."
                            android:inputType="number"
                            android:fontFamily="@font/ubuntureguiar"
                            android:singleLine="true"
                            android:textSize="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </EditText>
                        <EditText
                            android:id="@+id/ContactEmailID"
                            android:padding="@dimen/_10sdp"
                            android:background = "@drawable/jobs_input_background"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:hint="Email address"
                            android:inputType="text"
                            android:fontFamily="@font/ubuntureguiar"
                            android:singleLine="true"
                            android:textSize="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </EditText>


                    </LinearLayout>


                </RelativeLayout>

            </ScrollView>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/JobsButtonID"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentBottom="true"
            android:background="@color/carbon_teal_700">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/ubuntureguiar"
                android:text="Done"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_11sdp">

            </com.google.android.material.textview.MaterialTextView>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>