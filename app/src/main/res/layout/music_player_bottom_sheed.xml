<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/Cross"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:background="@drawable/close_background"
        android:padding="@dimen/_4sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:src="@drawable/close_icon"
            android:layout_height="@dimen/_10sdp">

        </ImageView>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/LayoutIs"
        android:layout_width="50dp"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/music_button_background"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="35dp"
            android:src="@drawable/mic_icon"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_height="35dp">
        </ImageView>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/LayoutTwo"
        android:layout_below="@+id/LayoutIs"
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/PlaypausIconID"
            android:src="@drawable/play_icon"
            android:layout_width="35dp"
            android:layout_height="35dp">
        </ImageView>

        <SeekBar
            android:id="@+id/SeekbarID"
            android:layout_toRightOf="@id/PlaypausIconID"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </SeekBar>


    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/LayoutTwo"
        android:layout_width="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/StartTimerID"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:text="0:00"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:id="@+id/EndTimerID"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/StartTimerID"
            android:text="0:00"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </RelativeLayout>

</RelativeLayout>