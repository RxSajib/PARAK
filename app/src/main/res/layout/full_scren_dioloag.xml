<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/DioloagToolbarID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:textSize="@dimen/_14sdp"
                    android:text="SenderName"
                    android:fontFamily="@font/ubuntureguiar"
                    android:textColor="@color/carbon_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    android:textSize="@dimen/_10sdp"
                    android:text="5 aug 2020"
                    android:id="@+id/ImageTimeDetails"
                    android:fontFamily="@font/ubuntureguiar"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textColor="@color/carbon_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </com.google.android.material.textview.MaterialTextView>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>


    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/PhotoViewID"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.github.chrisbanes.photoview.PhotoView>

</RelativeLayout>