<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".NavagationPage.IDcard_Page">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/IDcardToolbarID"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:background="@drawable/back_button_ripple"
                    android:id="@+id/back_icons"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/back_icon"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp">
                    </ImageView>
                </RelativeLayout>



                <com.google.android.material.textview.MaterialTextView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_15sdp"
                    android:text="My ID"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/ubuntureguiar"
                    android:textColor="@color/carbon_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </com.google.android.material.textview.MaterialTextView>

            </LinearLayout>

        </RelativeLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <RelativeLayout
        android:layout_below="@+id/IDcardToolbarID"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/person_id_card">
        </include>

    </RelativeLayout>

</LinearLayout>