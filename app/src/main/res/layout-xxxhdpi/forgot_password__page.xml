<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/app_color_background"
    android:layout_height="match_parent">




    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/forgotpasswordicon"
            android:layout_width="@dimen/_90sdp"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_90sdp">

        </ImageView>

        <com.google.android.material.textview.MaterialTextView
            android:textColor="@android:color/white"
            android:textSize="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/forgot_password"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </com.google.android.material.textview.MaterialTextView>



        <com.google.android.material.textview.MaterialTextView
            android:layout_marginTop="@dimen/_7sdp"
            android:textSize="@dimen/_13sdp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_25sdp"
            android:fontFamily="@font/ubuntureguiar"
            android:textColor="@android:color/white"
            android:layout_marginRight="@dimen/_25sdp"
            android:text="Please enter your email address and continue to reset password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </com.google.android.material.textview.MaterialTextView>


        <EditText
            android:background="@drawable/login_edittext_design"
            android:id="@+id/ForgetPasswordEmail"
            android:padding="15dp"
            android:hint="Enter Email"
            android:textSize="19sp"
            android:drawableLeft="@drawable/email_icon_icon"
            android:fontFamily="@font/ubuntureguiar"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:textColorHint="#CCCCCC"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:drawablePadding="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>




        <RelativeLayout
            android:layout_above="@+id/MidleTextID"
            android:id="@+id/ContinueResetPassword"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_width="match_parent"
            android:background="@drawable/phone_login_button_design"
            android:layout_height="55dp">


            <RelativeLayout
                android:background="@drawable/loginbutton_ripple"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:text="@string/con"
                    android:fontFamily="@font/ubuntureguiar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </com.google.android.material.textview.MaterialTextView>


            </RelativeLayout>


        </RelativeLayout>



    </LinearLayout>



    <RelativeLayout
        android:id="@+id/BackID"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_width="@dimen/_40sdp"
        android:background="@drawable/forget_password_backbutton"
        android:layout_height="@dimen/_40sdp">

        <RelativeLayout
            android:background="@drawable/white_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/back_black"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp">

            </ImageView>

        </RelativeLayout>




    </RelativeLayout>


</RelativeLayout>