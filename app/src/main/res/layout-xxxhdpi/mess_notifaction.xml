                            android:background="@drawable/pdf_download_button"
                            android:layout_toRightOf="@+id/PdfImage"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:layout_marginRight="@dimen/_25sdp"
                            android:layout_height="@dimen/_30sdp">

                            <com.google.android.material.textview.MaterialTextView
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@android:color/white"
                                android:text="Download PDF"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </com.google.android.material.textview.MaterialTextView>

                        </RelativeLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_below="@+id/PdfMessageBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:text="  Reply  "
                            android:textSize="@dimen/_10sdp"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/carbon_teal_900"
                            android:background="@drawable/reply_button_background"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_height="wrap_content">

                        </com.google.android.material.textview.MaterialTextView>

                    </RelativeLayout>


                </RelativeLayout>



            </RelativeLayout>
        </RelativeLayout>



    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_3sdp"
        android:id="@+id/AudioBox"
