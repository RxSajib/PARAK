<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_3sdp"
        android:visibility="gone"
        android:id="@+id/TextMessageBox"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@drawable/notifaction_ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/TopBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/Icon"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/message_icon">

                    </ImageView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@id/Icon"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="Message"
                        android:id="@+id/UserName"
                        android:textColor="@color/carbon_black_87"
                        android:textSize="@dimen/_13sdp">

                    </com.google.android.material.textview.MaterialTextView>




                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/NotifactionTime"
                        android:layout_gravity="left"
                        android:fontFamily="@font/ubuntureguiar"
                        android:layout_centerVertical="true"
                        android:text="Now"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/carbon_black_54"
                        android:textSize="@dimen/_12sdp">

                    </com.google.android.material.textview.MaterialTextView>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/TopBox"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_height="wrap_content">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/NotifactionProfileimage"
                        android:src="@drawable/notifaction_profileimage_background"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp">

                    </de.hdodenhof.circleimageview.CircleImageView>


                    <RelativeLayout
                        android:id="@+id/MessageBox"
                        android:layout_toRightOf="@+id/NotifactionProfileimage"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:id="@+id/MessageText"
                            android:text="To continue, Google will share your name, email address, language preference, and profile picture with dribbble.com. Before using this app, you can review dribbble.com's"
                            android:layout_height="wrap_content">

                        </com.google.android.material.textview.MaterialTextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_below="@+id/MessageBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:text="  Reply  "
                            android:textSize="@dimen/_10sdp"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/carbon_teal_900"
                            android:background="@drawable/reply_button_background"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_height="wrap_content">

                        </com.google.android.material.textview.MaterialTextView>

                    </RelativeLayout>


                </RelativeLayout>



            </RelativeLayout>
        </RelativeLayout>



    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_3sdp"
        android:id="@+id/ImageBox"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@drawable/notifaction_ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/TopBoxImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/IconImage"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/message_icon">

                    </ImageView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@id/IconImage"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="Message"
                        android:id="@+id/UserImageName"
                        android:textColor="@color/carbon_black_87"
                        android:textSize="@dimen/_13sdp">

                    </com.google.android.material.textview.MaterialTextView>




                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/NotifactionImageTime"
                        android:layout_gravity="left"
                        android:fontFamily="@font/ubuntureguiar"
                        android:layout_centerVertical="true"
                        android:text="Now"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/carbon_black_54"
                        android:textSize="@dimen/_12sdp">

                    </com.google.android.material.textview.MaterialTextView>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/TopBoxImage"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_height="wrap_content">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/NotifactionImageProfileImage"
                        android:src="@drawable/notifaction_profileimage_background"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp">

                    </de.hdodenhof.circleimageview.CircleImageView>


                    <RelativeLayout
                        android:id="@+id/MessageBoxImage"
                        android:layout_toRightOf="@+id/NotifactionImageProfileImage"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="wrap_content">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:scaleType="centerCrop"
                            android:id="@+id/NotifactionImage"
                            android:layout_width="match_parent"
                            app:riv_corner_radius="@dimen/_10sdp"
                            android:layout_height="@dimen/_160sdp">

                        </com.makeramen.roundedimageview.RoundedImageView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_below="@+id/MessageBoxImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:text="  Reply  "
                            android:textSize="@dimen/_10sdp"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/carbon_teal_900"
                            android:background="@drawable/reply_button_background"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_height="wrap_content">

                        </com.google.android.material.textview.MaterialTextView>

                    </RelativeLayout>


                </RelativeLayout>



            </RelativeLayout>
        </RelativeLayout>



    </com.google.android.material.card.MaterialCardView>


